            </value>
        </assignmentItems>
    </assignments>
    <constants>
        <name>SalesRejectedQueueName</name>
        <dataType>String</dataType>
        <value>
            <stringValue>Sales_Rejected_Queue</stringValue>
        </value>
    </constants>
    <description>Assigns a Lead to the &quot;Sales Rejected Queue&quot; if Status = &quot;Rejected&quot;</description>
    <interviewLabel>Lead Rejected Assign to Queue {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Lead Rejected Assign to Queue</label>
