        <name>Lead_Owner</name>
        <label>Lead Owner</label>
        <locationX>185</locationX>
        <locationY>533</locationY>
        <assignmentItems>
            <assignToReference>$Record.OwnerId</assignToReference>
            <operator>Assign</operator>
            <value>
