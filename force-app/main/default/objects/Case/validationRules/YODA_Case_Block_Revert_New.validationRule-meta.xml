<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>YODA_Case_Block_Revert_New</fullName>
    <active>true</active>
    <errorConditionFormula>AND(

  ISPICKVAL(Status, &quot;New&quot;), 
  NOT(ISPICKVAL(PRIORVALUE(Status), &quot;New&quot;)),

  NOT( $Setup.Bypass_Settings__c.Bypass_Validation_Rules__c )


)</errorConditionFormula>
    <errorMessage>Case Status can&apos;t be reverted to New after it has been saved to other Statuses.</errorMessage>
</ValidationRule>
