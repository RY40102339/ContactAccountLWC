<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <rules>
        <fullName>Copy Title into Subject of the Article</fullName>
        <actions>
            <name>Update_Subject_line_with_Title_value</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Knowledge__kav.Title</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>Copy Title into Subject of the Article so user does not have to insert any value in the subject line</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
